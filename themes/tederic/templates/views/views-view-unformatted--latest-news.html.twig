<div class="row latest-news">
    {% for row in rows %}
        <div class="col-md-6 col-sm-12 col-xs-12">
            <a href="#" class="{% if loop.index==4 %} special {% endif %}">
                <h3>{{ row.content['#view'].style_plugin.render_tokens[loop.index0]['{{ title }}'] }}</h3>
                <small>{{ row.content['#view'].style_plugin.render_tokens[loop.index0]['{{ field_spec }}'] }}{{ row.content['#view'].style_plugin.render_tokens[loop.index0]['{{ created }}'] }}</small>
                <span><i class="fa fa-arrow-right" style="color:#CACED0"></i></span>
            </a>
        </div>
    {% endfor %}
</div>
               